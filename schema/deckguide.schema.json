{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MTG Deckguide Schema",
  "type": "object",
  "required": [
    "deckName",
    "language",
    "colors",
    "format",
    "decklist"
  ],
  "properties": {
    "deckName": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "colors": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "W",
          "U",
          "B",
          "R",
          "G",
          "C"
        ]
      }
    },
    "flavorText": {
      "type": "string"
    },
    "strategy": {
      "type": "string"
    },
    "format": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "specialCards": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "cardName"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "cardName": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "combos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "cards",
          "effect"
        ],
        "properties": {
          "cards": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "effect": {
            "type": "string"
          }
        }
      }
    },
    "gameplan": {
      "type": "object",
      "required": [
        "early",
        "mid",
        "late"
      ],
      "properties": {
        "early": {
          "type": "string"
        },
        "mid": {
          "type": "string"
        },
        "late": {
          "type": "string"
        }
      }
    },
    "mulligan": {
      "type": "object",
      "required": [
        "keep",
        "mull"
      ],
      "properties": {
        "keep": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mull": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "decklist": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  }
}